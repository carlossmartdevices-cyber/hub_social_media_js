# Production Environment Configuration Template
# Copy this file to .env on your Hostinger server and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Get these from your Hostinger control panel > Databases > PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hub_social_media
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_password

# ============================================
# TWITTER API CONFIGURATION
# ============================================
# OAuth 1.0a (Legacy) - For basic tweet posting
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# OAuth 2.0 (Recommended) - For advanced features
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ============================================
# TELEGRAM API CONFIGURATION
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ============================================
# INSTAGRAM API CONFIGURATION
# ============================================
# Instagram credentials (use with caution - may violate ToS)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# ============================================
# TIKTOK API CONFIGURATION
# ============================================
# TikTok API access token
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# OPTIONAL: LOGGING CONFIGURATION
# ============================================
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log

# ============================================
# OPTIONAL: SECURITY CONFIGURATION
# ============================================
# SESSION_SECRET=your_random_session_secret
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
