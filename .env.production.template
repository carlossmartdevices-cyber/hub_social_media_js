# Production Environment Configuration
# Copy this file to .env and fill in your actual production values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=content_hub
DB_USER=admin
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# Twitter API Configuration
TWITTER_CONSUMER_KEY=your_production_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_production_twitter_consumer_secret
TWITTER_ACCESS_TOKEN=your_production_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_production_twitter_access_token_secret

# Telegram API Configuration
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token

# Instagram API Configuration (if using)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# TikTok API Configuration (if using)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Application Configuration
NODE_ENV=production
PORT=8080

# Security - CRITICAL: Generate strong random keys for production
# You can generate secure keys using: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_KEY_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_STRONG_REFRESH_SECRET_KEY_MIN_32_CHARS
ENCRYPTION_KEY=CHANGE_THIS_TO_STRONG_ENCRYPTION_KEY_MIN_32_CHARS

# xAI Grok API Configuration
# Get your API key from https://x.ai
XAI_API_KEY=your_production_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta
XAI_TEMPERATURE=0.7
XAI_MAX_TOKENS=4000
XAI_ENABLED=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring (optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD

# API URL
API_URL=http://localhost:8080
