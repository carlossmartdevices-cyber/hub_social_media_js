# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=33010
API_URL=http://localhost:33010
CLIENT_URL=http://localhost:3000

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_encryption_key_exactly_32_characters_long

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=55432
DB_NAME=content_hub
DB_USER=postgres
DB_PASSWORD=your_secure_database_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300

# ============================================
# TELEGRAM API CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/hub
TELEGRAM_WEBHOOK_PATH=/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_key
TELEGRAM_USE_WEBHOOK=false
# Optional: Support admin chat ID for receiving support ticket notifications
TELEGRAM_SUPPORT_ADMIN_CHAT_ID=

# ============================================
# TWITTER/X API CONFIGURATION
# ============================================
# OAuth 1.0a (Legacy API)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# OAuth 2.0 (User Authentication - for connecting multiple accounts)
TWITTER_CLIENT_ID=your_twitter_oauth2_client_id
TWITTER_CLIENT_SECRET=your_twitter_oauth2_client_secret
TWITTER_REDIRECT_URI=https://yourdomain.com/hub/api/oauth/twitter/callback

# ============================================
# INSTAGRAM API CONFIGURATION
# ============================================
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# ============================================
# FACEBOOK API CONFIGURATION
# ============================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# ============================================
# LINKEDIN API CONFIGURATION
# ============================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# ============================================
# YOUTUBE API CONFIGURATION
# ============================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_API_KEY=
YOUTUBE_REFRESH_TOKEN=

# ============================================
# TIKTOK API CONFIGURATION
# ============================================
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# ============================================
# XAI GROK API CONFIGURATION
# ============================================
XAI_API_KEY=your_xai_api_key_from_x_ai
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta
XAI_TEMPERATURE=0.7
XAI_MAX_TOKENS=4000
XAI_ENABLED=true

# ============================================
# MEDIA CONFIGURATION
# ============================================
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MEDIA_STORAGE_PATH=./uploads
VIDEO_UPLOAD_DIR=./uploads/videos
THUMBNAIL_DIR=./uploads/thumbnails

# ============================================
# AWS S3 CONFIGURATION
# ============================================
# AWS Region (must match KMS key region)
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 Bucket and CloudFront
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_ENABLED=true
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# KMS Encryption (OPTIONAL but RECOMMENDED for adult content security)
# ARN of the KMS key for server-side encryption
# Format: arn:aws:kms:REGION:ACCOUNT_ID:key/KEY_ID
AWS_KMS_KEY_ARN=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN=
LOG_LEVEL=info
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# ============================================
# CHUNKED UPLOAD CONFIGURATION
# ============================================
# Size of each chunk in MB (5MB recommended for most networks)
CHUNK_SIZE_MB=5

# Maximum total upload size in MB (5GB default for professional content)
MAX_UPLOAD_SIZE_MB=5120

# Maximum concurrent chunks per upload (higher = faster but more memory)
MAX_CONCURRENT_CHUNKS=4

# How long to keep upload sessions before cleanup (in hours)
UPLOAD_SESSION_TTL_HOURS=24

# Directory for temporary chunk storage
TEMP_CHUNK_DIR=./uploads/temp/chunks

# Maximum concurrent video uploads from single user
MAX_CONCURRENT_UPLOADS=2

# Maximum videos to queue before rejecting new uploads
MAX_QUEUED_UPLOADS=10

# ============================================
# BACKGROUND VIDEO PROCESSING CONFIGURATION
# ============================================
# Number of concurrent video processing workers
VIDEO_PROCESSING_CONCURRENCY=2

# Timeout for video processing jobs (in minutes)
VIDEO_PROCESSING_TIMEOUT_MINUTES=30

# ============================================
# BANDWIDTH MANAGEMENT
# ============================================
# Maximum upload speed in Mbps (0 = unlimited)
MAX_UPLOAD_SPEED_MBPS=0

# Minimum upload speed in Mbps (for timeout calculation)
MIN_UPLOAD_SPEED_MBPS=1
