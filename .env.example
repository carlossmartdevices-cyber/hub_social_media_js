# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=33010
API_URL=https://easybots.store

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=55432
DB_NAME=content_hub
DB_USER=postgres
DB_PASSWORD=postgres

# ============================================
# REDIS CONFIGURATION (Queue & Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_PASSWORD=

# ============================================
# SECURITY CONFIGURATION
# ============================================
# JWT Secrets (CRITICAL: Change in production!)
JWT_SECRET=change-this-secret
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_EXPIRES_IN=7d

# Encryption Key (CRITICAL: Must be at least 32 characters in production!)
ENCRYPTION_KEY=change-this-encryption-key-must-be-32-chars-minimum

# ============================================
# TWITTER/X API CONFIGURATION
# ============================================
# Get credentials from: https://developer.twitter.com/
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ============================================
# TELEGRAM API CONFIGURATION
# ============================================
# Get bot token from: @BotFather
# Chat ID can be: @username, -100123456789 (supergroups), or 123456789 (users)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# INSTAGRAM API CONFIGURATION
# ============================================
# Get credentials from: https://developers.facebook.com/
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# ============================================
# FACEBOOK API CONFIGURATION
# ============================================
# Get credentials from: https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# ============================================
# LINKEDIN API CONFIGURATION
# ============================================
# Get credentials from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# ============================================
# YOUTUBE API CONFIGURATION
# ============================================
# Get credentials from: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_API_KEY=
YOUTUBE_REFRESH_TOKEN=

# ============================================
# TIKTOK API CONFIGURATION
# ============================================
# Get credentials from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# ============================================
# MEDIA CONFIGURATION
# ============================================
# Sizes in bytes (default: 10MB for images, 100MB for videos)
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MEDIA_STORAGE_PATH=./uploads

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# AI CONFIGURATION (xAI Grok)
# ============================================
# Get API key from: https://x.ai/
XAI_API_KEY=
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta
XAI_TEMPERATURE=0.7
XAI_MAX_TOKENS=4000
XAI_ENABLED=true
